<div class="cover"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flight.destination %></h1>
        <p><%= @flight.description %></p>
      </div>
      <div class="flat-show-card">
        <h3>Flight Details</h3>
        <p>Date: <%= @flight.date %></p>
        <p>Departure time: <%= @flight.time.strftime("%H:%M") %></p>
        <p>Journey Duration: <%= @flight.duration %> hours</p>
        <p>Total Â£<%= @flight.price %></p>
        <div class="flight-image">
        <%= cl_image_tag @flight.photo.key, height: 400, crop: :thumb %></div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h4>Book this flight</h4>
        <%= simple_form_for [@flight, @booking] do |f| %>
          <%= f.input :name, label: 'Full Name' %>
          <%= f.association :flight, collection: Flight.all.order(:destination), prompt: "Select your flight", input_html: { data: { controller: "tom-select" } } %>
          <%= f.input :seat, label: 'How many seats would you like to purchase together?', :collection => 1..5 %>
          <div class="col-6 m-auto text-center">
            <%= f.submit "Confirm", class: 'btn btn-success btn-lg btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
